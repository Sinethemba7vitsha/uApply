@model IEnumerable<uApply.Data.Models.Parent>
@{
}
<h3 class="text-center text-dark mt-3"><i class="icon ion-md-people mr-2"></i> Parents Home Page</h3>

<div class="d-flex justify-content-end my-5">
    <a  class="btn btn-dark text-white shadow"  asp-area="User" asp-controller="Parent" asp-action="Upsert">
        <i class="icon ion-md-add-circle mr-2"></i> Register As New Parent
    </a>
</div>


<div class="card shadow p-3">
    <table id="parentTable" data-parent-id="1" class="table table-striped table-bordered shadow" style="width:100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>FullNames</th>
            <th>Surname</th>
            <th>ID Number</th>
            <th>Phone Number</th>
            <th>Nationality</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var parent in Model)
        {
            <tr>
                <td>@parent.FullNames</td>
                <td>@parent.Surname</td>
                <td>@parent.IdNumber</td>
                <td>@parent.PhoneNumber</td>
                <td>@parent.Nationality.Name</td>
                <td class="d-flex justify-content-around">
                    <a  asp-area="User" asp-controller="Parent" asp-action="Upsert" asp-route-id="@parent.Id"  class="text-dark">
                        <i class="icon ion-md-create mr-2"></i>
                    </a>
               
                    <a class="text-dark" asp-area="User" asp-controller="Parent" asp-action="Profile" asp-route-id="@parent.Id">
                        <i class="icon ion-md-person mr-2"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

