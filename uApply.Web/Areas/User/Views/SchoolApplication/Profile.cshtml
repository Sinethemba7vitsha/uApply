@model uApply.Utils.ViewModels.EducationVM.SchoolApplicationViewModel
@{
    var grades = Model.Grades;
}

 <h3 class="text-center text-uppercase text-muted my-5">Profile</h3>
<div class="shadow card mb-2">
    <div class="row profile-wrapper p-2">
    <div class="col-md-3 d-flex justify-content-center align-content-center">
        <i class="icon ion-md-person mr-2" style="font-size: 100px;"></i>
    </div>
    <div class="col-md-6">
        <p>Application Status: @Model.SchoolApplication.Status</p>  
        <p>Date Created: @Model.SchoolApplication.Created</p>          
        <p>Learner: @Model.SchoolApplication.Learner</p>        
        <p>School: @Model.SchoolApplication.School</p>
        <p>Grade: @Model.SchoolApplication.Grade</p>
    </div>
    <div class="col-md-3 d-flex justify-content-end">
        <a asp-area="User" asp-controller="SchoolApplication" asp-action="Upsert" asp-route-id="@Model.SchoolApplication.Id">
        <i class="icon ion-md-create mr-2" style="font-size: 30px;"></i>
        </a>
    </div>
    </div>
</div>

