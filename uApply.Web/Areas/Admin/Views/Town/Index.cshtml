@model IEnumerable<uApply.Data.Models.Location.Town>


<h3 class="text-center text-dark mt-3"><i class="icon ion-md-people mr-2"></i> Towns</h3>

<div class="d-flex justify-content-end my-5">
    <a  class="btn btn-dark text-white shadow"  asp-area="Admin" asp-controller="Town" asp-action="Upsert">
        <i class="icon ion-md-add-circle mr-2"></i> Add Town
    </a>
</div>


<table id="parentTable" class="table table-striped table-bordered shadow" style="width:100%">
    <thead class="thead-dark">
        <tr class="table-info">
            <th>Id</th>
            <th>Name</th>
            <th>District</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
  @foreach(var town in Model)
        {
            <tr>
                <td>@town.Id</td>
                <td>@town.Name</td>
                <td>@town.District.Name</td>
                <td>
                    <a  asp-area="Admin" asp-controller="Town" asp-action="Upsert" asp-route-id="@town.Id"  class="text-dark">
                        <i class="icon ion-md-create mr-2"></i>
                    </a>
               
                    <a class="text-dark">
                        <i class="icon ion-md-person mr-2"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
